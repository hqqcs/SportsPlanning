<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--弹出菜单样式-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--设置不被覆盖锚点，即不盖住toolbar-->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!--在竖直方向上到toolbar的距离-->
        <item name="android:dropDownVerticalOffset">7dp</item>
    </style>
    <!--设置评估按钮和下一步按钮的样式 -->
    <style name="button_nomal_style">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_start_evaluate</item>
    </style>

    <!--设置问题单选按钮1样式 -->
    <style name="button_radio_style">
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/circle_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--设置问题单选按钮2样式 -->
    <style name="button_radio_style1">
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorGrayBlack</item>
        <item name="android:background">@drawable/circle_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--设置问题字体1的样式 -->
    <style name="textView_question_style">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!--设置问题字体2的样式 -->
    <style name="textView_question_style1">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorGrayBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--设置日期选择器的样式-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>

    <!--设置文本编辑框的样式-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">@color/colorGrayBlack</item>
        <item name="android:colorControlActivated">@color/colorBlue</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--评估页面的主样式-->
    <style name="MainEvaluate">
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Fragment的Title字体样式-->
    <style name="FragmentTitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--复选框的样式-->
    <style name="CheckBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorGrayBlack</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <!--日期文本样式-->
    <style name="DataText">
        <item name="android:background">@drawable/shape_text</item>
        <item name="android:textColor">@color/colorGrayBlack</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--自定义圆形进度条-->
    <declare-styleable name="SportStepCountView">
        <attr name="mpc_percent" format="float" />
        <attr name="mpc_stroke_width" format="dimension" />
        <attr name="mpc_start_color" format="color" />
        <attr name="mpc_end_color" format="color" />
        <!-- 背景环的颜色 -->
        <attr name="mpc_default_color" format="color" />
    </declare-styleable>

    <style name="TextInputAppTheme" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
